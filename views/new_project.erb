<h1>Add a new album</h1>

<form action="/albums" method="post">
  <div class="form-group">
    <label for="album_name">Album name</label>
    <input id="n" name="album_name" class="form-control" type="text">

    <label for="album_year">Album Year</label>
    <input id="n" name="album_year" class="form-control" type="text">

    <label for="album_genre">Album Genre</label>
    <input id="n" name="album_genre" class="form-control" type="text">

    <label for="album_artist">Album Artist</label>
    <input id="n" name="album_artist" class="form-control" type="text">

    <label for="album_cost">Album Price</label>
    <input id="n" name="album_cost" class="form-control" type="text">

    <input id="n" name="status" class="form-control" type="hidden" value="true">

  </div>
  <button type="submit" class="btn btn-primary">Go!</button>
</form>
