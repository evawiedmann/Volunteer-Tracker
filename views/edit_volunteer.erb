<h1>Update <%= @volunteer.name() %></h1>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename volunteer</label>
  <input id="name" name="name" type="text" class="form-control">

  <button type="submit" class="btn btn-primary">Update</button>

</form>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-primary">Delete volunteer</button>
</form>

<p><a href="/volunteers">Return to volunteer list</a></p>
